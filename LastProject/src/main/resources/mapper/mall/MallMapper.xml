<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.app.mall.mapper.MallMapper">

	<!-- 전체조회 -->
  	<select id="getProductList" resultType="ProductVO">
  		SELECT *
  			 
  		FROM product
  		ORDER BY prdt_no DESC
  	
  	</select>
  	
  	<!-- 단건조회 -->
  	<select id="getProductInfo" >
  		SELECT *
  			 
  		FROM product
  		WHERE prdt_no = #{prdtNo}
  	</select>
  	
  	<select id="getCategoryName" resultType="String">
  		SELECT ctgr
  		FROM COMMON_CODE
  		WHERE common_code=#{commonCd}
  	</select>
  	
  	<select id="getCtgr" resultType="ProductVO">
  		SELECT common_cd, ctgr
  		FROM COMMON_CODE
  		WHERE common_cd LIKE #{commonCd}||'0%'
  	</select>
  	
</mapper>